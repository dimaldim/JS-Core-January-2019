{{>header}}
<div id="myMovies">
    <h1>My Movies</h1>
    <div class="movies">
        {{#each myMovies}}
            <div class="movie">
                <h2>{{title}}</h2>
                <img src="{{imageUrl}}">
                <p>Available Tickets: {{tickets}}</p>
                <div class="btn-group">
                    <button><a href="#/movie/edit/{{_id}}">Edit</a></button>
                    <button><a href="#/movie/delete/{{_id}}">Delete</a></button>
                    <button><a href="#/movie/buyticket/{{_id}}">Buy Ticket</a></button>
                    <button><a href="#/movie/details/{{_id}}">Details</a></button>
                </div>
            </div>
        {{/each}}
    </div>
</div>
{{>footer}}
